                <!-- Featured Programs Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="⭐ Program Unggulan"
                        android:textColor="#004D40"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:drawablePadding="8dp"
                        app:tint="#333333"
                        android:layout_marginBottom="16dp"/>

                    <!-- Program Card 1: Olimpiade Sains Nasional -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@android:color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="20dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="16dp">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="64dp"
                                    android:layout_height="64dp"
                                    app:cardCornerRadius="12dp"
                                    app:cardElevation="0dp"
                                    android:layout_marginEnd="16dp">
                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/winning"
                                        android:contentDescription="Olimpiade Sains" />
                                </androidx.cardview.widget.CardView>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Olimpiade Sains Nasional 2025"
                                        android:textColor="#333333"
                                        android:textSize="16sp"
                                        android:textStyle="bold"
                                        android:maxLines="2"
                                        android:ellipsize="end"
                                        android:layout_marginBottom="2dp"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Kementerian Pendidikan RI"
                                        android:textColor="#999999"
                                        android:textSize="12sp"
                                        android:layout_marginBottom="4dp"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Kompetisi sains tingkat nasional dengan hadiah beasiswa"
                                        android:textColor="#666666"
                                        android:textSize="14sp"
                                        android:maxLines="2"
                                        android:ellipsize="end"/>
                                </LinearLayout>
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#E5E7EB"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="8dp"/>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="500 Poin"
                                    android:textColor="#3B82F6"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:layout_alignParentStart="true"
                                    android:layout_centerVertical="true"/>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:gravity="end"
                                    android:layout_alignParentEnd="true">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Deadline: 15 Juli 2025"
                                        android:textColor="#999999"
                                        android:textSize="12sp"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="1,234 peserta"
                                        android:textColor="#D97706"
                                        android:textSize="12sp"
                                        android:textStyle="bold"/>
                                </LinearLayout>
                            </RelativeLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Program Card 2: Festival Film Pendek Siswa -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@android:color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="20dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="16dp">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="64dp"
                                    android:layout_height="64dp"
                                    app:cardCornerRadius="12dp"
                                    app:cardElevation="0dp"
                                    android:layout_marginEnd="16dp">
                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/winning"
                                        android:contentDescription="Festival Film" />
                                </androidx.cardview.widget.CardView>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Festival Film Pendek Siswa"
                                        android:textColor="#333333"
                                        android:textSize="16sp"
                                        android:textStyle="bold"
                                        android:maxLines="2"
                                        android:ellipsize="end"
                                        android:layout_marginBottom="2dp"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Komunitas Filmmaker Indonesia"
                                        android:textColor="#999999"
                                        android:textSize="12sp"
                                        android:layout_marginBottom="4dp"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Kompetisi film pendek tema 'Indonesia Masa Depan'"
                                        android:textColor="#666666"
                                        android:textSize="14sp"
                                        android:maxLines="2"
                                        android:ellipsize="end"/>
                                </LinearLayout>
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#E5E7EB"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="8dp"/>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="300 Poin"
                                    android:textColor="#3B82F6"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:layout_alignParentStart="true"
                                    android:layout_centerVertical="true"/>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:gravity="end"
                                    android:layout_alignParentEnd="true">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Deadline: 20 Juli 2025"
                                        android:textColor="#999999"
                                        android:textSize="12sp"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="567 peserta"
                                        android:textColor="#D97706"
                                        android:textSize="12sp"
                                        android:textStyle="bold"/>
                                </LinearLayout>
                            </RelativeLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <!-- Tambahkan lebih banyak Program Card di sini -->
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0F7FA"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="32dp">

        <!-- ========== HEADER DENGAN TOMBOL BACK ========== -->
        <LinearLayout
            android:id="@+id/headerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_header_gradient"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="16dp"
            android:paddingBottom="20dp"
            android:elevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Tombol Back -->
                <androidx.cardview.widget.CardView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#FFFFFF">

                    <ImageButton
                        android:id="@+id/btnBack"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Kembali"
                        android:padding="8dp"
                        android:src="@drawable/outline_arrow_left_24"
                        app:tint="#2196F3" />
                </androidx.cardview.widget.CardView>

                <!-- Judul Halaman -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="40dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Berita"
                    android:textColor="#004D40"
                    android:textSize="25sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingVertical="16dp">

            <!-- Bagian 1: Tentang Aplikasi MoneGoal -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                android:padding="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bagikan Informasi IDCamp 2023 dan Raih Hadiah Jutaan Rupiah!"
                        android:textColor="#004D40"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="10dp"
                        android:background="#B2DFDB" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:src="@drawable/idcamp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="4dp"
                        android:paddingTop="10dp"
                        android:text="Indosat Ooredoo Hutchison kembali menghadirkan IDCamp 2023, program beasiswa coding yang ditujukan untuk mencetak talenta digital Indonesia. Dalam rangka memperluas dampak positif program ini, IDCamp mengadakan kampanye berbagi informasi yang mengajak para peserta dan masyarakat umum untuk ikut mempromosikan IDCamp 2023 ke lingkungan sekitarnya."
                        android:textColor="#333333"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Versi Aplikasi: 1.2.0 (Build 20241102)"
                        android:textColor="#6A6A6A"
                        android:textSize="12sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <!-- Bagian 3: Hubungi Kami/Dukungan -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="Informasi"
                android:textColor="#004D40"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                style="@style/HelpOptionItem"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:text="Melalui kampanye ini, peserta diajak untuk membagikan informasi mengenai IDCamp 2023 melalui media sosial seperti Instagram, Twitter, atau platform lainnya dengan cara kreatif. Setiap peserta yang berpartisipasi dan mengikuti aturan kampanye dengan benar berkesempatan untuk mendapatkan nilai tambahan, serta memenangkan hadiah menarik senilai jutaan rupiah.

Beberapa hadiah yang disediakan antara lain smartwatch Garmin, Redmi Buds, dan berbagai hadiah eksklusif lainnya untuk total 25 peserta terpilih. Tak hanya itu, peserta juga berkesempatan mendapatkan pengakuan sebagai ambassador IDCamp dan menjadi bagian dari komunitas pembelajar digital terbesar di Indonesia."
                />

            <!-- Opsi 2: Kontak Email -->
            <TextView
                android:id="@+id/tvContactEmail"
                style="@style/HelpOptionItem"
                android:textSize="14dp"
                android:paddingTop="10dp"
                android:textColor="#00ffff"
                android:drawableEnd="@drawable/outline_arrow_drop_up_24"
                android:text="➡️ https://idcamp.ioh.co.id/news/1020/bagikan-informasi-idcamp-2023-dan-raih-nilai-tambahan-serta-hadiah-menarik-senilai-jutaan-rupiah?utm_source=chatgpt.com" />


        </LinearLayout>
    </LinearLayout>
</ScrollView>

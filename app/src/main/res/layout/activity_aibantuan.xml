<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0F7FA"
    tools:context=".AIBantuanActivity">

    <!-- Scroll View untuk seluruh konten halaman -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Bagian Header Sambutan -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingTop="24dp"
                android:paddingBottom="16dp">

                <!-- Judul Utama (AI Advisor) -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AI Advisor"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:textColor="#004D40"
                    android:layout_marginBottom="16dp"/>

                <!-- Kotak Sambutan -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:elevation="2dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Halo, Husna! ðŸ‘‹"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="@color/gray_800"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Saya asisten AI MoneGoal. Saya siap membantu Anda dengan rekomendasi dan strategi terbaik!"
                            android:textSize="14sp"
                            android:textColor="@color/black"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>



            </LinearLayout>

            <!-- JUDUL: Pertanyaan Cepat -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pertanyaan Cepat"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#004D40"
                android:layout_marginTop="8dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="16dp"/>

            <!-- Grid Tombol Cepat -->
            <GridLayout
                android:id="@+id/quickActionsGrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="2"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:useDefaultMargins="true"
                android:alignmentMode="alignBounds"
                android:columnOrderPreserved="false">

                <!-- Item 1: Program Sains -->
                <LinearLayout
                    android:id="@+id/btnQuick1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:padding="12dp"
                    android:background="@drawable/bg_quick_action_card"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Program Sains"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rekomendasi untuk saya"
                        android:textSize="12sp"
                        android:textColor="@color/gray_600"/>
                </LinearLayout>

                <!-- Item 2: Tips Campaign -->
                <LinearLayout
                    android:id="@+id/btnQuick2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:padding="12dp"
                    android:background="@drawable/bg_quick_action_card"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tips Campaign"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Strategi sukses"
                        android:textSize="12sp"
                        android:textColor="@color/gray_600"/>
                </LinearLayout>

                <!-- Item 3: Beasiswa -->
                <LinearLayout
                    android:id="@+id/btnQuick3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:padding="12dp"
                    android:background="@drawable/bg_quick_action_card"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Beasiswa"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Peluang terbaru"
                        android:textSize="12sp"
                        android:textColor="@color/gray_600"/>
                </LinearLayout>

                <!-- Item 4: Project Sosial -->
                <LinearLayout
                    android:id="@+id/btnQuick4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:padding="12dp"
                    android:background="@drawable/bg_quick_action_card"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Project Sosial"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ide &amp; inspirasi"
                        android:textSize="12sp"
                        android:textColor="@color/gray_600"/>
                </LinearLayout>
            </GridLayout>

            <!-- Bagian Chat Interface (Container) -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_margin="16dp"
                android:background="@drawable/bg_chat_container_white">

                <!-- Judul Tanya AI Bantuan -->
                <TextView
                    android:id="@+id/chatTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tanya AI Bantuan"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/gray_800"
                    android:paddingStart="24dp"
                    android:paddingTop="24dp"
                    android:paddingEnd="24dp"
                    android:paddingBottom="16dp"
                    app:layout_constraintTop_toTopOf="parent"/>

                <!-- RecyclerView untuk Pesan -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvMessages"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="300dp"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    app:layout_constraintTop_toBottomOf="@id/chatTitle"
                    app:layout_constraintBottom_toTopOf="@id/inputContainerChatCard"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_message_ai"
                    tools:itemCount="3"
                />

                <!-- Bagian Input Chat (Fixed di bawah Chat Card) -->
                <LinearLayout
                    android:id="@+id/inputContainerChatCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:background="@drawable/bg_input_field"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <EditText
                        android:id="@+id/etMessageInput"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Tulis pesan..."
                        android:background="@drawable/bg_input_rounded"
                        android:paddingStart="16dp"
                        android:paddingTop="12dp"
                        android:paddingEnd="16dp"
                        android:paddingBottom="12dp"
                        android:textColor="@color/gray_800"
                        android:inputType="textCapSentences|textMultiLine"
                        android:maxLines="5"
                        android:imeOptions="actionSend"/>

                    <ImageButton
                        android:id="@+id/btnSend"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/paper"
                        android:contentDescription="Kirim Pesan"
                        android:background="@drawable/bg_send_button_gradient"
                        android:scaleType="fitCenter"
                        android:padding="8dp"
                        tools:ignore="ContentDescription"
                        />

                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

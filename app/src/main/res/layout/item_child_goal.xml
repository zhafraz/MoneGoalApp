<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Area Gambar (Dihilangkan sesuai permintaan) -->

        <!-- Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Judul Tujuan (Nama Barang) -->
            <TextView
                android:id="@+id/tvGoalTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Sepeda Gunung Merk Xtreme 26"
                android:textColor="#333333"
                android:textSize="18sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginBottom="4dp"/>

            <!-- Deskripsi Tujuan (Untuk apa) -->
            <TextView
                android:id="@+id/tvGoalDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Untuk digunakan saat kegiatan bersepeda bersama teman-teman di hari Minggu."
                android:textColor="#666666"
                android:textSize="14sp"
                android:maxLines="3"
                android:ellipsize="end"
                android:layout_marginBottom="16dp"/>

            <!-- Progress Bar Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="4dp">

                <TextView
                    android:id="@+id/Target"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Target: Rp 1.000.000"
                    android:textColor="#999999"
                    android:textSize="12sp"
                    android:layout_gravity="end"
                    />

                <!-- Progress Bar -->
                <ProgressBar
                    android:id="@+id/pbGoalProgress"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:max="100"
                    android:progress="75"
                    android:progressTint="#4CAF50"
                    android:progressBackgroundTint="#E0E0E0"
                    android:layout_marginBottom="4dp"/>

                <!-- Progress Text -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp">

                    <!-- Nominal Terkumpul -->
                    <TextView
                        android:id="@+id/tvCurrentAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Rp 750.000"
                        android:textColor="#333333"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_alignParentStart="true"/>

                    <!-- Nominal Target -->
                    <Button
                        android:id="@+id/tvTargetAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Selesai"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:backgroundTint="@color/warna_kapital"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0F7FA"
    tools:context=".DetailAjuanAnakFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ========== HEADER DENGAN TOMBOL BACK ========== -->
            <LinearLayout
                android:id="@+id/headerLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_header_gradient"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:elevation="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <!-- Tombol Back -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardBack"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="#FFFFFF"
                        android:layout_alignParentStart="true">

                        <ImageButton
                            android:id="@+id/btnBack"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="Kembali"
                            android:padding="8dp"
                            android:src="@drawable/outline_arrow_left_24"
                            app:tint="#2196F3" />
                    </androidx.cardview.widget.CardView>

                    <!-- Judul Tengah -->
                    <TextView
                        android:id="@+id/tvHeaderTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Detai Ajuan Anak"
                        android:textColor="#004D40"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:layout_centerInParent="true" />
                </RelativeLayout>
            </LinearLayout>


            <!-- RINGKASAN STATISTIK -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:weightSum="4">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp"
                    android:background="@drawable/bg_tag_yellow"
                    android:layout_marginEnd="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:textColor="#000000"
                        android:textSize="24sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Baru"
                        android:textColor="#000000"
                        android:alpha="0.9"
                        android:textSize="11sp"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp"
                    android:background="@drawable/bg_tag_yellow"
                    android:layout_marginHorizontal="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15"
                        android:textColor="#000000"
                        android:textSize="24sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Disetujui"
                        android:textColor="#000000"
                        android:alpha="0.9"
                        android:textSize="11sp"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp"
                    android:background="@drawable/bg_tag_yellow"
                    android:layout_marginHorizontal="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:textColor="#000000"
                        android:textSize="24sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ditolak"
                        android:textColor="#000000"
                        android:alpha="0.9"
                        android:textSize="11sp"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp"
                    android:background="@drawable/bg_tag_yellow"
                    android:layout_marginStart="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textColor="#000000"
                        android:textSize="24sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Menunggu"
                        android:textColor="#000000"
                        android:alpha="0.9"
                        android:textSize="11sp"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- KONTEN UTAMA -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- DETAIL PENGAJUAN -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📄 Detail Pengajuan"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#1C1C1E"
                    android:layout_marginBottom="12dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="#FFFFFF"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <!-- Info Anak -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="16dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                app:cardCornerRadius="24dp"
                                app:cardElevation="0dp"
                                app:cardBackgroundColor="#E3F2FD">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="👦"
                                    android:textSize="28sp"/>
                            </androidx.cardview.widget.CardView>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginStart="12dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Kevin"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:textColor="#1C1C1E"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="12 tahun • Diajukan 25 Nov 2024"
                                    android:textSize="12sp"
                                    android:textColor="#8E8E93"
                                    android:layout_marginTop="2dp"/>
                            </LinearLayout>

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="0dp"
                                app:cardBackgroundColor="#FFF9E6">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="⏰ Sedang"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:textColor="#FFB800"
                                    android:paddingHorizontal="12dp"
                                    android:paddingVertical="6dp"/>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#F2F2F7"
                            android:layout_marginBottom="16dp"/>

                        <!-- Detail Nominal & Kategori -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="12dp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="💰 Nominal"
                                    android:textSize="12sp"
                                    android:textColor="#8E8E93"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Rp 75.000"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:textColor="#2E5BFF"
                                    android:layout_marginTop="4dp"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="🏷️ Kategori"
                                    android:textSize="12sp"
                                    android:textColor="#8E8E93"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Pendidikan"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="#1C1C1E"
                                    android:layout_marginTop="4dp"/>
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Alasan Pengajuan -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="📝 Alasan Pengajuan:"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:textColor="#1C1C1E"
                            android:layout_marginBottom="8dp"/>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#F8F9FA">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Untuk membeli buku ensiklopedia sains dan alat gambar karena ada tugas sekolah tentang tata surya dan saya ingin membuat poster yang bagus"
                                android:textSize="14sp"
                                android:textColor="#1C1C1E"
                                android:lineSpacingExtra="4dp"
                                android:padding="16dp"/>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- HISTORY KEUANGAN ANAK -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🕐 History"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#1C1C1E"
                    android:layout_marginBottom="12dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="#FFFFFF"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="📊 Keuangan Kevin"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#1C1C1E"
                            android:layout_marginBottom="16dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:layout_marginBottom="12dp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginEnd="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Saldo Saat Ini"
                                    android:textSize="12sp"
                                    android:textColor="#8E8E93"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Rp 120.000"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="#00C851"
                                    android:layout_marginTop="4dp"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginStart="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Pengeluaran Bulan Ini"
                                    android:textSize="12sp"
                                    android:textColor="#8E8E93"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Rp 45.000"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="#FF4961"
                                    android:layout_marginTop="4dp"/>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginEnd="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Disetujui"
                                    android:textSize="12sp"
                                    android:textColor="#8E8E93"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="8 kali"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="#1C1C1E"
                                    android:layout_marginTop="4dp"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginStart="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Ditolak"
                                    android:textSize="12sp"
                                    android:textColor="#8E8E93"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="1 kali"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="#1C1C1E"
                                    android:layout_marginTop="4dp"/>
                            </LinearLayout>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#F2F2F7"
                            android:layout_marginVertical="16dp"/>

                        <!-- Rekomendasi AI -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#E8F5E9">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="🤖 Rekomendasi Sistem"
                                    android:textSize="13sp"
                                    android:textStyle="bold"
                                    android:textColor="#2E7D32"
                                    android:layout_marginBottom="8dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="✓ Sesuai pola belanja edukasi\n✓ Masuk dalam budget bulanan\n✓ Anak konsisten menabung"
                                    android:textSize="12sp"
                                    android:textColor="#2E7D32"
                                    android:lineSpacingExtra="4dp"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- PESAN BALASAN -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📝 Pesan Untuk Anak"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#1C1C1E"
                    android:layout_marginBottom="12dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="#FFFFFF"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="💌 Template Cepat:"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#1C1C1E"
                            android:layout_marginBottom="12dp"/>

                        <!-- Template Messages -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="2dp"
                            app:cardBackgroundColor="#F0F9FF"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="✅ Ibu setuju, jangan lupa struknya"
                                android:textSize="14sp"
                                android:textColor="#2196F3"
                                android:padding="14dp"/>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="2dp"
                            app:cardBackgroundColor="#F0F9FF"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="👍 Ayah approve, belajar yang rajin"
                                android:textSize="14sp"
                                android:textColor="#2196F3"
                                android:padding="14dp"/>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="2dp"
                            app:cardBackgroundColor="#FFEBEE"
                            android:layout_marginBottom="16dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="❌ Maaf belum bisa sekarang ya"
                                android:textSize="14sp"
                                android:textColor="#FF4961"
                                android:padding="14dp"/>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Atau tulis pesan kustom:"
                            android:textSize="13sp"
                            android:textColor="#8E8E93"
                            android:layout_marginBottom="8dp"/>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#F8F9FA">

                            <EditText
                                android:id="@+id/inputPesanBalasan"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:hint="Tulis pesan untuk Kevin..."
                                android:gravity="top|start"
                                android:padding="16dp"
                                android:textSize="14sp"
                                android:textColor="#1C1C1E"
                                android:textColorHint="#C7C7CC"
                                android:background="@android:color/transparent"
                                android:inputType="textMultiLine"/>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- TOMBOL AKSI -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🫵 Keputusan Anda"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#1C1C1E"
                    android:layout_marginBottom="12dp"/>

                <!-- Tombol Setuju Penuh -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp"
                    android:layout_marginBottom="12dp">

                    <LinearLayout
                        android:id="@+id/btnSetujuPenuh"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:padding="18dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="✅"
                            android:textSize="24sp"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Setuju"
                            android:textStyle="bold"
                            android:textColor="#90EE90"
                            android:textSize="16sp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Tombol Tolak -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#FFFFFF"
                    android:layout_marginBottom="12dp">

                    <LinearLayout
                        android:id="@+id/btnTolak"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:padding="18dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="❌"
                            android:textSize="24sp"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tolak"
                            android:textStyle="bold"
                            android:textColor="#FF4961"
                            android:textSize="16sp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Tombol Tunda -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#FFFFFF"
                    android:layout_marginBottom="20dp">

                    <LinearLayout
                        android:id="@+id/btnTunda"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:padding="18dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="⏳"
                            android:textSize="24sp"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tunda - Ingatkan Nanti"
                            android:textStyle="bold"
                            android:textColor="#8E8E93"
                            android:textSize="16sp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- OPSI TAMBAHAN -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#FFFFFF"
                    android:layout_marginBottom="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="🎛️ Opsi Tambahan"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#1C1C1E"
                            android:layout_marginBottom="16dp"/>

                        <!-- Beri Reward -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="12dp">

                            <CheckBox
                                android:id="@+id/cbReward"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:buttonTint="#2E5BFF"/>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginStart="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="🎁 Beri Reward Bonus"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:textColor="#1C1C1E"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Tambah Rp 10.000 sebagai apresiasi"
                                    android:textSize="12sp"
                                    android:textColor="#8E8E93"
                                    android:layout_marginTop="2dp"/>
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Jadwalkan Pembelian -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="12dp">

                            <CheckBox
                                android:id="@+id/cbJadwal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:buttonTint="#2E5BFF"/>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginStart="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="📅 Jadwalkan Pembelian"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:textColor="#1C1C1E"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Atur waktu pencairan dana"
                                    android:textSize="12sp"
                                    android:textColor="#8E8E93"
                                    android:layout_marginTop="2dp"/>
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Buat Catatan -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <CheckBox
                                android:id="@+id/cbCatatan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:buttonTint="#2E5BFF"/>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginStart="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="📝 Buat Catatan Khusus"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:textColor="#1C1C1E"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Simpan pengingat untuk pengajuan ini"
                                    android:textSize="12sp"
                                    android:textColor="#8E8E93"
                                    android:layout_marginTop="2dp"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="24dp"
    app:cardElevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="28dp">

        <!-- Ikon Utama -->
        <ImageView
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/monegoal_logo"
            android:contentDescription="Ikon Tautan Keluarga"
            android:background="@drawable/bg_circle_green_light"
            android:padding="16dp"
            android:elevation="3dp"
            android:scaleType="centerInside"
             />

        <!-- Judul -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Kode Undangan Keluarga"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#004D40"
            android:gravity="center" />

        <!-- Deskripsi -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="28dp"
            android:gravity="center"
            android:lineSpacingExtra="6dp"
            android:text="Berikan kode ini kepada anak Anda agar akun mereka dapat ditautkan untuk pengawasan keluarga."
            android:textColor="#6A6A6A"
            android:textSize="14sp" />

        <!-- Kotak Kode Undangan -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="28dp"
            app:cardCornerRadius="14dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#E0F7FA">

            <TextView
                android:id="@+id/tvInvitationCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="16dp"
                android:paddingHorizontal="20dp"
                android:gravity="center"
                android:text="XYZ123ABC"
                android:textColor="#00796B"
                android:textSize="30sp"
                android:letterSpacing="0.1"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />
        </androidx.cardview.widget.CardView>

        <!-- Tombol Salin Kode -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCopyCode"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="SALIN KODE"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="16sp"
            android:backgroundTint="#009688"
            android:layout_marginBottom="14dp"
            app:cornerRadius="12dp"
            app:icon="@drawable/copy"
            app:iconPadding="8dp"
            app:iconTint="@android:color/white"
            app:iconGravity="textStart" />

        <!-- Tombol Tutup -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnClose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TUTUP"
            android:textAllCaps="true"
            android:textColor="#004D40"
            android:textStyle="bold"
            android:textSize="14sp"
            android:backgroundTint="#E0F2F1"
            app:cornerRadius="12dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>

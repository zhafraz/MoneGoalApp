<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Ikon Status (Berubah tergantung Status: Approve/Reject) -->
        <ImageView
            android:id="@+id/imgStatusIcon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="Ikon Status Persetujuan"
            android:src="@drawable/inmoney"
            android:padding="8dp"
            android:scaleType="fitCenter"
            tools:src="@drawable/outmoney" />

        <!-- Judul Dinamis -->
        <TextView
            android:id="@+id/tvDialogTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Pengajuan Berhasil Disetujui!"
            android:textColor="#1C1C1E"
            android:textSize="22sp"
            android:textStyle="bold"
            tools:text="Pengajuan Berhasil Ditolak" />

        <!-- Pesan Konfirmasi / Detail Ringkas -->
        <TextView
            android:id="@+id/tvDialogMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:text="Dana sebesar Rp 75.000 untuk Kevin telah ditambahkan ke saldo tabungan. Kevin akan menerima notifikasi."
            android:textColor="#6A6A6A"
            android:textSize="14sp"
            tools:text="Pengajuan Rp 75.000 dari Kevin untuk 'Beli Buku Sains' telah ditolak. Kevin akan menerima pesan dari Anda." />

        <!-- Tombol Aksi (Tutup/Lanjut) -->
        <Button
            android:id="@+id/btnDialogAction"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="#009688"
            android:text="Selesai &amp; Kembali ke Beranda"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="12dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>

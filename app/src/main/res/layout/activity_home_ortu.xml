<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0F7FA"
    android:id="@+id/main"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="80dp">

        <!-- HEADER SECTION (Background/User Card) -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_header_gradient"
            android:padding="24dp"
            android:elevation="4dp">

            <!-- Judul Aplikasi & Tombol Notifikasi -->
            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MoneGoal"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#004D40"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                android:id="@+id/btnNotification"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/notif"
                android:contentDescription="Notifikasi"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:elevation="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <!-- User/Balance Card (Parent View) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardUserBalance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:layout_constraintTop_toBottomOf="@id/btnNotification">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_card_balance_gradient"
                    android:padding="20dp">

                    <!-- Info User (Parent) -->
                    <LinearLayout
                        android:id="@+id/profile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:id="@+id/imgProfile"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:src="@drawable/user"
                            android:background="@drawable/bg_circle_yellow"
                            android:padding="8dp"
                            android:scaleType="fitCenter"
                            android:contentDescription="Foto Profil Orang Tua"
                            android:layout_marginEnd="12dp"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/tvUserName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Nama Orang Tua"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF"/>
                            <!-- MODIFIKASI: Menunjukkan Peran Ortu dan Jumlah Anak -->
                            <TextView
                                android:id="@+id/tvUserRole"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pengelola Keluarga (2 Anak)"
                                android:textSize="14sp"
                                android:textColor="#B2DFDB"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Saldo & Pengajuan Tertunda -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#80D8F6"
                        android:layout_marginBottom="12dp"/>

                    <LinearLayout
                        android:id="@+id/finance_summary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center_horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="TOTAL DANA ANAK"
                                android:textStyle="bold"
                                android:textSize="12sp"
                                android:textColor="#B2DFDB"/>
                            <TextView
                                android:id="@+id/tvTotalChildBalance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rp 0"
                                android:textSize="26sp"
                                android:textStyle="bold"
                                android:textColor="#ffffff"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center_horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:text="PENGAJUAN TERTUNDA"
                                android:textSize="12sp"
                                android:textColor="#B2DFDB"/>
                            <TextView
                                android:id="@+id/tvPendingSubmissions"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="26sp"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Quick Actions Grid (Parent Focus) -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🛠️ Manajemen Keluarga"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#004D40"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="12dp"
            android:paddingHorizontal="24dp"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:overScrollMode="never"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp">

                <!-- Riwayat Transaksi -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardManageChildren"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="5dp"
                    app:cardBackgroundColor="#FFFFFF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/wallet"
                            android:layout_marginBottom="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Riwayat Transaksi"
                            android:textStyle="bold"
                            android:textColor="#004D40"
                            android:textSize="14sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Detail Pengajuan -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardSetTask"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="5dp"
                    app:cardBackgroundColor="#FFFFFF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/riwayat"
                            android:layout_marginBottom="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Detail Pengajuan"
                            android:textStyle="bold"
                            android:textColor="#004D40"
                            android:textSize="14sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardTopup"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="5dp"
                    app:cardBackgroundColor="#FFFFFF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/outline_money"
                            android:layout_marginBottom="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Topup Uang"
                            android:textStyle="bold"
                            android:textColor="#004D40"
                            android:textSize="14sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </HorizontalScrollView>

        <!-- Daftar Pengajuan Anak (Core Feature) -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📝 Pengajuan Anak Menunggu Persetujuan"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#004D40"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="12dp"
            android:paddingHorizontal="24dp"/>

        <!-- RecyclerView untuk daftar pengajuan (misal: permintaan uang jajan, permintaan pembelian barang, dsb.) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewSubmissions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:paddingHorizontal="16dp"
            tools:itemCount="3"
            tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_submission" /> <!-- Harus menggunakan layout item yang baru untuk pengajuan -->

        <!-- Contoh placeholder untuk Pengajuan jika tidak ada yang pending -->
        <TextView
            android:id="@+id/tvNoSubmissions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🎉 Semua pengajuan anak sudah beres! Tidak ada yang perlu disetujui."
            android:textColor="#004D40"
            android:paddingHorizontal="24dp"
            android:paddingVertical="12dp"
            android:gravity="center"
            android:background="@drawable/bg_tag_green"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="16dp"
            android:visibility="visible"
            tools:visibility="gone"/>

    </LinearLayout>
</ScrollView>

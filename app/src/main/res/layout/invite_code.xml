<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_card_balance_gradient"
    android:padding="24dp"
    android:gravity="center"
    android:elevation="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kode Undangan Orang Tua"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/tvInviteCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XXXXXX"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="#FFF176"
        android:layout_marginBottom="12dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gunakan kode ini untuk login akun orang tua di aplikasi."
        android:textColor="#E0F7FA"
        android:textAlignment="center"
        android:textSize="14sp"
        android:layout_marginBottom="24dp" />

    <TextView
        android:id="@+id/btnClosePopup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tutup"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:padding="12dp"
        android:textStyle="bold"
        android:layout_marginTop="8dp" />
</LinearLayout>
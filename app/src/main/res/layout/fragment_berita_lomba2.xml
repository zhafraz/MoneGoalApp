<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0F7FA"
    tools:context=".BeritaLomba2Fragment">

    <!-- ScrollView untuk Konten Utama -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingBottom="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingTop="16dp">

            <!-- Card Konten Berita Utama -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="20dp">

                    <!-- Gambar Utama Berita - Ubah tools:src menjadi android:src -->
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/financelomba"
                        android:contentDescription="Gambar Berita" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingHorizontal="20dp"
                        android:paddingTop="20dp">

                        <!-- Judul Berita - Hapus ID, ubah tools:text menjadi android:text -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#1A237E"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"
                            android:text="Global Fintech Hackcelerator 2025" />

                        <!-- Status/Deadline (Sudah statis) -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="16dp"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ’° 10,000 Poin"
                                android:textColor="#00838F"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:layout_marginEnd="16dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="â³ 15 Hari Lagi"
                                android:textColor="#757575"
                                android:textSize="14sp"/>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginBottom="16dp"
                            android:background="#E0E0E0" />

                        <!-- Deskripsi Singkat (Sudah statis) -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:lineSpacingExtra="4dp"
                            android:text="Berikut informasi lebih lanjut mengenai lomba yang diadakan oleh Monetary Authority of Singapore (MAS) dalam rangka Singapore FinTech Festival 2025."
                            android:textColor="#333333"
                            android:textSize="16sp"
                            android:layout_marginBottom="16dp"/>

                        <!-- Deskripsi Lengkap - Hapus ID, ubah tools:text menjadi android:text -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:lineSpacingExtra="6dp"
                            android:textColor="#333333"
                            android:textSize="14sp"
                            tools:text="Global Fintech Hackcelerator 2025 kembali hadir sebagai bagian dari Singapore FinTech Festival yang diselenggarakan oleh Monetary Authority of Singapore (MAS). Tahun ini mengusung tema â€œAI for Financial Servicesâ€, menantang peserta untuk menciptakan solusi berbasis kecerdasan buatan yang mampu meningkatkan efisiensi dan inklusivitas di sektor keuangan. Sebanyak 18 tim finalis terpilih akan mengikuti program intensif dan mempresentasikan inovasi mereka di Demo Day pada 12 November 2025. Tiga tim terbaik akan meraih hadiah SGD 80.000 masing-masing, serta peluang kolaborasi dan pendanaan hingga SGD 2,5 juta"/>

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <!-- Card Informasi Tambahan & CTA -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tautan Pendaftaran"
                        android:textColor="#1A237E"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp"/>

                    <!-- Opsi CTA: Link Pendaftaran - ID dipertahankan untuk click listener -->
                    <TextView
                        android:id="@+id/tvLinkCTA"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:drawablePadding="12dp"
                        android:paddingVertical="12dp"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                        android:text="Daftar Sekarang "
                        android:textColor="#039BE5"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:drawableEndCompat="@drawable/outline_arrow_drop_up_24"
                        app:drawableTint="#039BE5"
                        tools:ignore="RtlSymmetry" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- HEADER DENGAN TOMBOL BACK (Fixed at Top) -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/bg_header_gradient"
        android:paddingHorizontal="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:elevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Tombol Back - ID dipertahankan untuk click listener -->
            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Kembali"
                android:padding="8dp"
                android:src="@drawable/outline_arrow_left_24"
                app:tint="#1A237E"
                android:backgroundTint="@android:color/white"
                android:elevation="4dp"/>

            <!-- Judul Halaman (Statis) -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="44dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Detail Kampanye"
                android:textColor="#004D40"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

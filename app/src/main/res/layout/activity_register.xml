<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login_gradient"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Judul -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MoneGoal"
            android:textColor="@color/black"
            android:textSize="36sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buat akun baru kamu"
            android:textColor="#5A6C7D"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Icon bulat -->
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/bg_circle_blue"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✍️"
                android:textSize="40sp" />
        </LinearLayout>

        <!-- Card untuk form -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="25dp"
            app:cardElevation="8dp"
            android:backgroundTint="@android:color/white"
            android:layout_marginBottom="20dp"
            android:padding="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Selamat Datang!"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#2C3E50"
                    android:gravity="center"
                    android:layout_marginBottom="16dp" />

                <!-- Nama Lengkap -->
                <EditText
                    android:id="@+id/etNama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nama Lengkap"
                    android:padding="12dp"
                    android:background="@drawable/input_field"
                    android:layout_marginBottom="12dp" />

                <!-- Asal Sekolah -->
                <EditText
                    android:id="@+id/etSekolah"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Username"
                    android:drawableStart="@drawable/ic_school"
                    android:padding="12dp"
                    android:background="@drawable/input_field"
                    android:layout_marginBottom="12dp" />

                <!-- Jenjang Sekolah (DROPDOWN) -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jenjang Sekolah"
                    android:textColor="#2C3E50"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginBottom="6dp"
                    android:layout_marginTop="6dp" />

                <Spinner
                    android:id="@+id/spJenjang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_field"
                    android:padding="12dp"
                    android:spinnerMode="dropdown"
                    android:layout_marginBottom="12dp" />

                <!-- Email -->
                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    android:drawableStart="@drawable/ic_email"
                    android:inputType="textEmailAddress"
                    android:padding="12dp"
                    android:background="@drawable/input_field"
                    android:layout_marginBottom="12dp" />

                <!-- Password -->
                <EditText
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:drawableStart="@drawable/ic_lock"
                    android:inputType="textPassword"
                    android:padding="12dp"
                    android:background="@drawable/input_field"
                    android:layout_marginBottom="20dp" />

                <!-- Konfirmasi Password -->
                <EditText
                    android:id="@+id/etPasswordConfirm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Konfirmasi Password"
                    android:drawableStart="@drawable/ic_lock"
                    android:inputType="textPassword"
                    android:padding="12dp"
                    android:background="@drawable/input_field"
                    android:layout_marginBottom="20dp" />

                <!-- Tombol daftar -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRegister"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:text="Daftar Sekarang"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:backgroundTint="@color/blue_600"
                    android:textColor="@android:color/white"
                    app:cornerRadius="15dp"
                    app:elevation="4dp" />

                <!-- Teks bawah -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sudah punya akun?"
                    android:textColor="#5A6C7D"
                    android:textSize="14sp"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp" />

                <TextView
                    android:id="@+id/tvLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Masuk di sini"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>

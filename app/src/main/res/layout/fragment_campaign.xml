<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0F7FA"
    tools:context=".CampaignFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:paddingTop="24dp"
                    android:background="@drawable/bg_header_gradient"
                    android:elevation="4dp"
                    android:paddingBottom="16dp">

                    <!-- Title & Create Button -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:id="@+id/textViewTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Campaign"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:textColor="#004D40"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- Search Bar -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Cari campaign..."
                            android:textColorHint="#999999"
                            android:textColor="#333333"
                            android:paddingStart="48dp"
                            android:paddingEnd="16dp"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:background="@drawable/bg_input_rounded"
                            android:singleLine="true"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/search"
                            android:contentDescription="Ikon Cari"
                            app:tint="#999999"
                            android:layout_marginStart="16dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- Filter Tabs -->
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none"
                        android:paddingBottom="8dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:text="Semua"
                                android:textColor="@android:color/white"
                                android:textSize="14sp"
                                android:paddingStart="16dp"
                                android:paddingEnd="16dp"
                                android:background="@drawable/bg_tag_green"
                                android:textAllCaps="false"
                                android:layout_marginEnd="8dp" />

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:text="🔥 Trending"
                                android:textColor="#666666"
                                android:textSize="14sp"
                                android:paddingStart="16dp"
                                android:paddingEnd="16dp"
                                android:background="@drawable/bg_tag_yellow"
                                android:textAllCaps="false"
                                android:layout_marginEnd="8dp" />

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:text="🏫 Sekolah"
                                android:textColor="#666666"
                                android:textSize="14sp"
                                android:paddingStart="16dp"
                                android:paddingEnd="16dp"
                                android:background="@drawable/bg_tag_yellow"
                                android:textAllCaps="false"
                                android:layout_marginEnd="8dp" />

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:text="🔬 Sains"
                                android:textColor="#666666"
                                android:textSize="14sp"
                                android:paddingStart="16dp"
                                android:paddingEnd="16dp"
                                android:background="@drawable/bg_tag_yellow"
                                android:textAllCaps="false"
                                android:layout_marginEnd="8dp" />

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:text="🎨 Seni"
                                android:textColor="#666666"
                                android:textSize="14sp"
                                android:paddingStart="16dp"
                                android:paddingEnd="16dp"
                                android:background="@drawable/bg_tag_yellow"
                                android:textAllCaps="false" />
                        </LinearLayout>
                    </HorizontalScrollView>
                </LinearLayout>

            <!-- CAMPAIGNS LIST -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:layout_marginTop="20dp">

                <!-- CAMPAIGN CARD 1 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@android:color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Image Area -->
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="160dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/idcamp"
                                android:contentDescription="Festival Sains" />

                            <!-- TRENDING Tag -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="TRENDING"
                                android:textColor="#000000"
                                android:textSize="10sp"
                                android:textStyle="bold"
                                android:paddingStart="12dp"
                                android:paddingEnd="12dp"
                                android:paddingTop="4dp"
                                android:paddingBottom="4dp"
                                android:background="@drawable/bg_tag_green"
                                android:layout_marginEnd="12dp"
                                android:layout_marginTop="12dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <!-- Details -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="20dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Festival Sains SMA IT Nur Hidayah"
                                android:textColor="#333333"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="4dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Festival sains terbesar se-Sukoharjo untuk memperkenalkan inovasi teknologi"
                                android:textColor="#666666"
                                android:textSize="14sp"
                                android:layout_marginBottom="12dp"/>

                            <!-- Progress Bar -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginBottom="12dp">

                                <ProgressBar
                                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="8dp"
                                    android:max="100"
                                    android:progress="75"
                                    android:progressDrawable="@drawable/progress_bar_secondary_gradient"/>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Rp 7.5M"
                                        android:textColor="#999999"
                                        android:textSize="12sp"
                                        android:layout_alignParentStart="true"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Target: Rp 10M"
                                        android:textColor="#999999"
                                        android:textSize="12sp"
                                        android:layout_alignParentEnd="true"/>
                                </RelativeLayout>
                            </LinearLayout>

                            <!-- Poin & Sisa Hari -->
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="10,000 Poin"
                                    android:textColor="#3B82F6"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:layout_alignParentStart="true"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="15 hari lagi"
                                    android:textColor="#999999"
                                    android:textSize="12sp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"/>
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- CAMPAIGN CARD 2 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@android:color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Image Area -->
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="160dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:contentDescription="Proyek Air Bersih"
                                android:scaleType="centerCrop"
                                android:src="@drawable/sic"
                                tools:layout_editor_absoluteX="0dp"
                                tools:layout_editor_absoluteY="0dp" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <!-- Details -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="20dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Proyek Penelitian Air Bersih"
                                android:textColor="#333333"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="4dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Filter air sederhana untuk daerah terpencil"
                                android:textColor="#666666"
                                android:textSize="14sp"
                                android:layout_marginBottom="12dp"/>

                            <!-- Progress Bar -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginBottom="12dp">

                                <ProgressBar
                                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="8dp"
                                    android:max="100"
                                    android:progress="45"
                                    android:progressDrawable="@drawable/progress_bar_primary_gradient"/>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Rp 2.25M"
                                        android:textColor="#999999"
                                        android:textSize="12sp"
                                        android:layout_alignParentStart="true"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Target: Rp 5M"
                                        android:textColor="#999999"
                                        android:textSize="12sp"
                                        android:layout_alignParentEnd="true"/>
                                </RelativeLayout>
                            </LinearLayout>

                            <!-- Poin & Sisa Hari -->
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="5,000 Poin"
                                    android:textColor="#3B82F6"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:layout_alignParentStart="true"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="22 hari lagi"
                                    android:textColor="#999999"
                                    android:textSize="12sp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"/>
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <!-- Tambahkan lebih banyak Campaign Card di sini -->

            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

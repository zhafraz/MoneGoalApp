<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F4F8"
    tools:context=".CampaignFragment">

<androidx.core.widget.NestedScrollView
android:layout_width="match_parent"
android:layout_height="match_parent"
android:fillViewport="true">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="80dp">

    <!-- HEADER & SEARCH BAR SECTION -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="24dp"
        android:background="@drawable/bg_header_gradient"
        android:elevation="4dp"
        android:paddingBottom="16dp">

        <!-- Title -->
        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Berita"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#004D40"
            android:layout_marginBottom="16dp"/>

        <!-- Search Bar -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/etSearchBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Cari berita, lomba, atau tips..."
                android:textColorHint="#A9A9A9"
                android:textColor="#333333"
                android:paddingStart="48dp"
                android:paddingEnd="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:background="@drawable/bg_input_rounded"
                android:singleLine="true"
                android:inputType="text"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/search"
                android:contentDescription="Ikon Cari"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:tint="#80CBC4" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Filter Tabs -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:paddingBottom="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Filter Tab 1 -->
                <Button
                    android:id="@+id/btnFilterAll"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Semua"
                    android:textColor="#004D40"
                    android:textSize="14sp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    app:cornerRadius="12dp"
                    android:backgroundTint="#B2DFDB"
                    android:textAllCaps="false"
                    android:layout_marginEnd="8dp" />

                <!-- Filter Tab 2 -->
                <Button
                    android:id="@+id/btnFilterTrending"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="ðŸ”¥ Trending"
                    android:textColor="#004D40"
                    android:textSize="14sp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    app:cornerRadius="12dp"
                    android:backgroundTint="#E0F7FA"
                    android:textAllCaps="false"
                    android:layout_marginEnd="8dp" />

                <!-- Filter Tab 3 -->
                <Button
                    android:id="@+id/btnFilterSchool"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="ðŸ« Sekolah"
                    android:textColor="#004D40"
                    android:textSize="14sp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    app:cornerRadius="12dp"
                    android:backgroundTint="#E0F7FA"
                    android:textAllCaps="false"
                    android:layout_marginEnd="8dp" />

                <!-- Filter Tab 4 -->
                <Button
                    android:id="@+id/btnFilterFinance"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="ðŸ“Š Finance"
                    android:textColor="#004D40"
                    android:textSize="14sp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    app:cornerRadius="12dp"
                    android:backgroundTint="#E0F7FA"
                    android:textAllCaps="false" />
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <!-- CAMPAIGNS LIST -->
    <LinearLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        android:layout_marginTop="20dp">

        <!-- CAMPAIGN CARD 1 (IDCAMP) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardCampaign3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Image Area -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="160dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/idcamp"
                    android:contentDescription="Festival Sains" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Details -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bagikan Informasi IDCamp 2023 dan Raih Hadiah Jutaan Rupiah!"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>


                <!-- Poin & Sisa Hari -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10,000 Poin"
                        android:textColor="#00838F"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_alignParentStart="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15 hari lagi"
                        android:textColor="#666666"
                        android:textSize="12sp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- CAMPAIGN CARD 2 (SAMSUNG) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardCampaign1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="24dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Image Area -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="160dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="Proyek Air Bersih"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/sic" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Samsung Innovation Campus Batch 7 2024/2025"
                android:textColor="#333333"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>


            <!-- Poin & Sisa Hari -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5,000 Poin"
                    android:textColor="#00838F"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_alignParentStart="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22 hari lagi"
                    android:textColor="#666666"
                    android:textSize="12sp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>

<!-- CAMPAIGN CARD 3 (FINTECH) -->
<androidx.cardview.widget.CardView
    android:id="@+id/cardCampaign2"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginBottom="24dp"
android:clickable="true"
android:focusable="true"
android:foreground="?android:attr/selectableItemBackground"
app:cardCornerRadius="16dp"
app:cardElevation="6dp"
app:cardBackgroundColor="@android:color/white">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Image Area -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="160dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/financelomba"
            android:contentDescription="Festival Sains" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Details -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2025 Global Fintech Hackcelerator"
            android:textColor="#333333"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>


        <!-- Poin & Sisa Hari -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10,000 Poin"
                android:textColor="#00838F"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_alignParentStart="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15 hari lagi"
                android:textColor="#666666"
                android:textSize="12sp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
</androidx.cardview.widget.CardView>


    </LinearLayout>
    </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

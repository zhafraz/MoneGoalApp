<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0F7FA"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="80dp">

        <!-- HEADER SECTION (Background/User Card) -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_header_gradient"
            android:padding="24dp"
            android:elevation="4dp">

            <!-- Judul Aplikasi & Tombol Notifikasi -->
            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MoneGoal"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#004D40"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                android:id="@+id/btnNotification"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/notif"
                android:contentDescription="Notifikasi"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:elevation="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <!-- User/Balance Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardUserBalance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:layout_constraintTop_toBottomOf="@id/btnNotification">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_card_balance_gradient"
                    android:padding="20dp">

                    <!-- Info User -->
                    <LinearLayout
                        android:id="@+id/profile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                        <ImageView
                            android:id="@+id/imgProfile"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:src="@drawable/user"
                            android:background="@drawable/bg_circle_yellow"
                            android:padding="8dp"
                            android:scaleType="fitCenter"
                            android:contentDescription="Foto Profil"
                            android:layout_marginEnd="12dp"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/tvUserName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Nama"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF"/>
                            <TextView
                                android:id="@+id/tvUserClass"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sekolah"
                                android:textSize="14sp"
                                android:textColor="#B2DFDB"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Saldo & Poin -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#80D8F6"
                        android:layout_marginBottom="12dp"/>

                    <LinearLayout
                        android:id="@+id/finance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center_horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="SALDO KAS"
                                android:textStyle="bold"
                                android:textSize="12sp"
                                android:textColor="#B2DFDB"/>
                            <TextView
                                android:id="@+id/tvCurrentBalance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rp 0"
                                android:textSize="26sp"
                                android:textStyle="bold"
                                android:textColor="#ffffff"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center_horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:text="POIN REWARD"
                                android:textSize="12sp"
                                android:textColor="#B2DFDB"/>
                            <TextView
                                android:id="@+id/tvCurrentPoints"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="26sp"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Quick Actions Grid -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="âœˆï¸ Aksi Cepat"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#004D40"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="12dp"
            android:paddingHorizontal="24dp"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:paddingHorizontal="16dp">

            <!-- Action: Tambah Saldo -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardAddMoney"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/wallet"
                        android:layout_marginBottom="8dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tambah Saldo"
                        android:textStyle="bold"
                        android:textColor="#004D40"
                        android:textSize="14sp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Action: Tambah Tujuan (Goal) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardAddPrestasi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/winning"
                        android:layout_marginBottom="8dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Program Prestasi"
                        android:textStyle="bold"
                        android:textColor="#004D40"
                        android:textSize="14sp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Action: Lihat Riwayat -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardChat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/robot"
                        android:layout_marginBottom="8dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Smart Advisor"
                        android:textStyle="bold"
                        android:textColor="#004D40"
                        android:textSize="14sp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Action: Tukar Poin -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardNews"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/newspaper"
                        android:layout_marginBottom="8dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Berita"
                        android:textStyle="bold"
                        android:textColor="#004D40"
                        android:textSize="14sp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </GridLayout>

        <!-- Daftar Tujuan (Goal List) -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸŒŸ Program Terpopuler"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#004D40"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="12dp"
            android:paddingHorizontal="24dp"/>

        <!-- RecyclerView untuk daftar tujuan -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewGoals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:paddingHorizontal="16dp"
            tools:itemCount="2"
            tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_goal" />

    </LinearLayout>
</ScrollView>
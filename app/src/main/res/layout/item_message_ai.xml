<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="8dp"
    android:layout_marginEnd="64dp"
    android:gravity="top">

    <!-- Ikon AI -->
    <TextView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/robot"
        android:text="AI"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_marginEnd="8dp"
        tools:backgroundTint="@color/primary_500"/>

    <!-- Bubble Pesan AI -->
    <TextView
        android:id="@+id/tvAiMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_ai_bubble"
        android:paddingStart="16dp"
        android:paddingTop="10dp"
        android:paddingEnd="16dp"
        android:paddingBottom="10dp"
        android:textColor="@color/gray_800"
        android:textSize="14sp"
        tools:text="Halo Husna! Saya senang bisa membantu Anda hari ini. Silakan tanya apa pun!" />
</LinearLayout>

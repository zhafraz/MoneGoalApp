<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0F7FA"
    tools:context=".LoginActivity">

<ScrollView
android:id="@+id/scrollView"
android:layout_width="0dp"
android:layout_height="0dp"
android:fillViewport="true"
app:layout_constraintTop_toTopOf="parent"
app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal|center_vertical">

    <!-- Bagian Ilustrasi dan Judul -->
    <FrameLayout
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_circle_yellow"
    android:elevation="12dp">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/monegoal_logo"
        android:layout_gravity="center"
         />
</FrameLayout>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Selamat Datang di MoneGoal!"
    android:textSize="28sp"
    android:textStyle="bold"
    android:textColor="#004D40"
    android:fontFamily="sans-serif-medium"
    android:gravity="center"
    android:layout_marginBottom="8dp"/>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Ayo capai tujuan impianmu!"
    android:textSize="18sp"
    android:textColor="#4DB6AC"
    android:layout_marginBottom="32dp"/>

<!-- Login Card (Menggunakan CardView untuk tampilan pop-up) -->
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    android:layout_marginHorizontal="8dp"
    android:layout_marginBottom="32dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="#FFFFFF">

        <!-- Email -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="#004D40"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="contoh: halo@email.com"
            android:inputType="textEmailAddress"
            android:paddingStart="16dp"
            android:background="@drawable/bg_input_rounded"
            android:textColor="#004D40"
            android:textSize="16sp"
            android:layout_marginBottom="20dp"/>

        <!-- Password -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textColor="#004D40"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="6+ karakter"
            android:inputType="textPassword"
            android:paddingStart="16dp"
            android:background="@drawable/bg_input_rounded"
            android:textColor="#004D40"
            android:textSize="16sp"
            android:layout_marginBottom="24dp"/>

        <!-- Checkbox dan Tombol Lupa Password (Opsional) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="32dp">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cbRemember"
                android:text="Ingat Saya"
                android:textColor="#757575"
                android:buttonTint="#FFC107"
                android:paddingStart="8dp"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Lupa?"
                android:gravity="end"
                android:textColor="#FFC107"
                android:textStyle="bold"
                android:textSize="15sp"/>

        </LinearLayout>


        <!-- Login Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnLogin"
            android:text="Masuk dan Nabung!"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/bg_button_gradient"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="24dp"/>

        <!-- Register -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvOrtu"
                android:text="Masuk Akun Ortu "
                android:textColor="#FFC107"
                android:textStyle="bold"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="||"
                android:textColor="#757575"
                android:textStyle="bold"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvRegister"
                android:text=" Buat Akun Baru"
                android:textColor="#FFC107"
                android:textStyle="bold"
                android:textSize="15sp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
</LinearLayout>
    </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

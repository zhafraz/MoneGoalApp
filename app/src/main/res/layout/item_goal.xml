<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:background="@color/white">

        <!-- Area Gambar/Ikon Program -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_margin="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp">

            <!-- Container untuk Gradien Biru dan Ikon Trofi (sesuai gambar) -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_program_image_gradient"
                android:gravity="center">

                <!-- ImageView untuk Ikon/Gambar Program (Bisa diganti dengan PNG/GIF/URL) -->
                <ImageView
                    android:id="@+id/imgProgramIcon"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/winning"
                    android:contentDescription="Ikon Program" />
                <!-- Catatan: Anda harus menyesuaikan sumber ikon ini di Adapter -->
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- Detail Teks Program -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp">

            <!-- Judul Program -->
            <TextView
                android:id="@+id/tvProgramTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#263238"
                tools:text="Olimpiade Sains Internasional" />

            <!-- Deskripsi Program -->
            <TextView
                android:id="@+id/tvProgramDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#757575"
                android:maxLines="2"
                android:ellipsize="end"
                android:lineSpacingExtra="2dp"
                android:layout_marginBottom="12dp"
                tools:text="Kompetisi sains internasional ini akan diikuti oleh kalangan siswa SMP/SMA terpilih dari berbagai negara." />

            <!-- Footer: Poin dan Partisipan -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Biaya Poin -->
                <TextView
                    android:id="@+id/tvProgramPoints"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#00897B"
                    tools:text="600 Poin" />

                <!-- Jumlah Siswa Berpartisipasi -->
                <TextView
                    android:id="@+id/tvProgramParticipants"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:textSize="12sp"
                    android:textColor="#757575"
                    android:layout_centerVertical="true"
                    tools:text="24 siswa berpartisipasi" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>

    <!-- Base theme -->
    <style name="Base.Theme.MoneGoal" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Override atribut base bila perlu -->
    </style>

    <!-- Theme aplikasi (gunakan ini di AndroidManifest) -->
    <style name="Theme.MoneGoal" parent="Base.Theme.MoneGoal">
